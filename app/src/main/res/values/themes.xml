<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/blue_app</item>
        <item name="colorSecondary">@color/blue_secundaryapp</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="style_bottom_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="style_card_city">
        <item name="android:layout_width">100dp</item>
